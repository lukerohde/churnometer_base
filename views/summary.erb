<h1>Summary</h1>

<section>
  <form action="/summary">
    <ul>
      <li>
        <label>group by</label>
        <input type="text" name="group_by" value="<%= @defaults['group_by'] %>">
      </li>
      <li>
        
      </li>
    </ul>
    <ul>
      <li><input type="submit" value="Submit"></li>
    </ul>
    
  </form>
</section>

<section>
  <% if @data && @data[0] %>
    <table>
      <tr>
        <% @data[0].each do |k, v| %>
          <th><%= k %></th>
        <% end %>
      </tr>
      <% @data.each do |row| %>
        <tr>
          <% row.each do |k, v| %>
            <td><%= v %></td>
          <% end %>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>No data</p>
  <% end %>
</section>


