<div id="error-page"  class="container">
  <div class="prepend-2 span-20 append-2 last">
    <h1>There was an error</h1>
    <section class="errors">
      <label>Error</label>
      <p class="error"><%= @error.message %></p>

      <label>URL</label>
      <p class="info">
        <%= request.url %>
      </p>

      <label>Params</label>
      <p class="info">
        <%= params.inspect %>
      </p>

      <label>SQL</label>
      <p class="info">
        <%=h @sql %>
      </p>

      <label>Stacktrace</label>
      <p class="info">
        <%= @error.backtrace.join("<br />") %>
      </p>
    </section>
  </div>
</div>
